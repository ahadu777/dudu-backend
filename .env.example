# Server Configuration
PORT=8080
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=ticketing

# API Configuration
API_PREFIX=/api
SWAGGER_ENABLED=true

# JWT
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Directus Integration (for Ticket Reservation & Activation)
USE_DIRECTUS=false
DIRECTUS_URL=https://dudu-derp-cxk5g.ondigitalocean.app
DIRECTUS_ACCESS_TOKEN=your_token_here

# WeChat Mini Program
WECHAT_MINI_APPID=your_mini_program_appid
WECHAT_MINI_SECRET=your_mini_program_secret

# Wallyt Payment (微信小程序支付)
# 测试环境: https://payuat.wepayez.com/pay/gateway
# 生产环境: https://gateway.wepayez.com/pay/gateway
WALLYT_API_URL=https://payuat.wepayez.com/pay/gateway
WALLYT_MCH_ID=your_merchant_id
WALLYT_SECRET_KEY=your_secret_key
WALLYT_SIGN_TYPE=MD5
WALLYT_NOTIFY_URL=https://your-domain.com/payments/wallyt/notify