{
  "info": {
    "name": "US-012 OTA Platform Integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "End-to-end testing of OTA platform integration for 5000 ticket allocation"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{BASE_URL}}",
      "type": "string"
    },
    {
      "key": "otaApiKey",
      "value": "ota_test_key_12345",
      "type": "string"
    },
    {
      "key": "reservationId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication Test (Should Fail)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('API key required', function () {",
              "    pm.response.to.have.status(401);",
              "});",
              "",
              "pm.test('Error message correct', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.error).to.eql('API_KEY_REQUIRED');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/ota/inventory",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "inventory"]
        }
      }
    },
    {
      "name": "2. Get OTA Inventory",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('5000 total units available', function () {",
              "    const response = pm.response.json();",
              "    const quantities = response.available_quantities;",
              "    const total = (quantities['106'] || 0) + (quantities['107'] || 0) + (quantities['108'] || 0);",
              "    pm.expect(total).to.be.at.least(4000); // Allow for some reservations",
              "});",
              "",
              "pm.test('Pricing context included', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.pricing_context).to.be.an('object');",
              "    pm.expect(response.pricing_context.base_prices).to.be.an('object');",
              "    pm.expect(response.pricing_context.customer_types).to.be.an('array');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/inventory",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "inventory"]
        }
      }
    },
    {
      "name": "3. Create Reservation (Premium Plan)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Reservation created', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Reservation ID returned', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.reservation_id).to.be.a('string');",
              "    pm.collectionVariables.set('reservationId', response.reservation_id);",
              "});",
              "",
              "pm.test('Pricing snapshot included', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.pricing_snapshot).to.be.an('object');",
              "    pm.expect(response.pricing_snapshot.base_price).to.eql(288);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 106,\n  \"quantity\": 25\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ota/reserve",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "reserve"]
        }
      }
    },
    {
      "name": "4. Verify Inventory Reduction",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Product 106 inventory reduced', function () {",
              "    const response = pm.response.json();",
              "    const available106 = response.available_quantities['106'];",
              "    pm.expect(available106).to.be.below(2000); // Should be reduced from reservation",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/inventory",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "inventory"]
        }
      }
    },
    {
      "name": "5. Get Reservation Details",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Reservation details correct', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.product_id).to.eql(106);",
              "    pm.expect(response.quantity).to.eql(25);",
              "    pm.expect(response.status).to.eql('active');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/reservations/{{reservationId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "reservations", "{{reservationId}}"]
        }
      }
    },
    {
      "name": "6. Create Maximum Reservation (Pet Plan)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Maximum reservation allowed', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Correct pricing for Pet Plan', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.pricing_snapshot.base_price).to.eql(188);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 107,\n  \"quantity\": 100\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ota/reserve",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "reserve"]
        }
      }
    },
    {
      "name": "7. Test Validation Limits (Should Fail)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Validation error for excessive quantity', function () {",
              "    pm.response.to.have.status(422);",
              "});",
              "",
              "pm.test('Correct error message', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.error).to.eql('VALIDATION_ERROR');",
              "    pm.expect(response.message).to.include('between 1 and 100');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 108,\n  \"quantity\": 150\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ota/reserve",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "reserve"]
        }
      }
    },
    {
      "name": "8. Test Invalid Product (Should Fail)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Product not found error', function () {",
              "    pm.response.to.have.status(404);",
              "});",
              "",
              "pm.test('Correct error message', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.error).to.eql('PRODUCT_NOT_FOUND');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 999,\n  \"quantity\": 10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ota/reserve",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "reserve"]
        }
      }
    },
    {
      "name": "9. List Active Reservations",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Reservations array present', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.reservations).to.be.an('array');",
              "    pm.expect(response.total_count).to.be.a('number');",
              "});",
              "",
              "pm.test('At least 2 reservations exist', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.reservations.length).to.be.at.least(2);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/reservations",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "reservations"]
        }
      }
    },
    {
      "name": "10. Test Invalid API Key (Should Fail)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Invalid API key rejected', function () {",
              "    pm.response.to.have.status(401);",
              "});",
              "",
              "pm.test('Correct error message', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.error).to.eql('INVALID_API_KEY');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "invalid_key_12345"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/inventory",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "inventory"]
        }
      }
    },
    {
      "name": "11. Cleanup - Manual Expiry Test",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Cleanup completed', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Expiry count returned', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.message).to.include('Cleanup completed');",
              "    pm.expect(response.expired_reservations).to.be.a('number');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/reservations/cleanup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "reservations", "cleanup"]
        }
      }
    },
    {
      "name": "12. Bulk Generate Pre-made Tickets",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Tickets generated successfully', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Batch details correct', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.batch_id).to.eql('NEWMAN_TEST_BATCH');",
              "    pm.expect(response.tickets).to.be.an('array');",
              "    pm.expect(response.tickets.length).to.eql(2);",
              "    pm.expect(response.total_generated).to.eql(2);",
              "});",
              "",
              "pm.test('Tickets have correct structure', function () {",
              "    const response = pm.response.json();",
              "    const ticket = response.tickets[0];",
              "    pm.expect(ticket.ticket_code).to.include('CRUISE-2025-FERRY-');",
              "    pm.expect(ticket.status).to.eql('PRE_GENERATED');",
              "    pm.expect(ticket.qr_code).to.include('data:image/png;base64,');",
              "    pm.expect(ticket.entitlements).to.be.an('array');",
              "    ",
              "    // Store first ticket for activation test",
              "    pm.collectionVariables.set('ticketCode', ticket.ticket_code);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 106,\n  \"quantity\": 2,\n  \"batch_id\": \"NEWMAN_TEST_BATCH\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ota/tickets/bulk-generate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "tickets", "bulk-generate"]
        }
      }
    },
    {
      "name": "13. Activate Pre-made Ticket",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Ticket activated successfully', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Activation response correct', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.ticket_code).to.be.a('string');",
              "    pm.expect(response.order_id).to.include('ORD-');",
              "    pm.expect(response.customer_name).to.eql('Newman Test Customer');",
              "    pm.expect(response.status).to.eql('ACTIVE');",
              "    pm.expect(response.activated_at).to.be.a('string');",
              "    ",
              "    // Store order ID for retrieval tests",
              "    pm.collectionVariables.set('orderId', response.order_id);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"customer_details\": {\n    \"name\": \"Newman Test Customer\",\n    \"email\": \"newman@example.com\",\n    \"phone\": \"+1234567890\"\n  },\n  \"payment_reference\": \"PAY-NEWMAN-TEST-001\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ota/tickets/{{ticketCode}}/activate",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "tickets", "{{ticketCode}}", "activate"]
        }
      }
    },
    {
      "name": "14. List OTA Orders",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Orders retrieved successfully', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Orders list structure correct', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.orders).to.be.an('array');",
              "    pm.expect(response.total_count).to.be.a('number');",
              "    pm.expect(response.orders.length).to.be.greaterThan(0);",
              "});",
              "",
              "pm.test('Order contains our activated ticket', function () {",
              "    const response = pm.response.json();",
              "    const orderId = pm.collectionVariables.get('orderId');",
              "    const ourOrder = response.orders.find(o => o.order_id === orderId);",
              "    pm.expect(ourOrder).to.not.be.undefined;",
              "    pm.expect(ourOrder.customer_name).to.eql('Newman Test Customer');",
              "    pm.expect(ourOrder.status).to.eql('confirmed');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/orders?limit=10",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "orders"],
          "query": [
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "15. Get Order Tickets with QR Codes",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Order tickets retrieved successfully', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Tickets structure correct', function () {",
              "    const response = pm.response.json();",
              "    pm.expect(response.tickets).to.be.an('array');",
              "    pm.expect(response.tickets.length).to.eql(1);",
              "});",
              "",
              "pm.test('Ticket details correct', function () {",
              "    const response = pm.response.json();",
              "    const ticket = response.tickets[0];",
              "    const expectedCode = pm.collectionVariables.get('ticketCode');",
              "    ",
              "    pm.expect(ticket.ticket_code).to.eql(expectedCode);",
              "    pm.expect(ticket.status).to.eql('ACTIVE');",
              "    pm.expect(ticket.qr_code).to.include('data:image/png;base64,');",
              "    pm.expect(ticket.entitlements).to.be.an('array');",
              "    pm.expect(ticket.entitlements.length).to.be.greaterThan(0);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{otaApiKey}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ota/orders/{{orderId}}/tickets",
          "host": ["{{baseUrl}}"],
          "path": ["api", "ota", "orders", "{{orderId}}", "tickets"]
        }
      }
    }
  ]
}