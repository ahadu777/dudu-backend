{
  "info": {
    "name": "US-013 Venue Operations Platform",
    "description": "E2E testing for PRD-003 Event Venue Operations - Venue CRUD, Analytics, and Operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "Venue CRUD Management",
      "item": [
        {
          "name": "Get Venue List",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Venue list retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.venues).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue",
              "host": ["{{base_url}}"],
              "path": ["venue"]
            }
          }
        },
        {
          "name": "Create New Venue - Central Pier",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Venue created successfully', function () {",
                  "    pm.response.to.have.status(201);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.venue_code).to.include('test-central-pier');",
                  "    pm.expect(response.venue_name).to.exist;",
                  "    pm.expect(response.venue_type).to.eql('ferry_terminal');",
                  "    pm.collectionVariables.set('central_pier_id', response.venue_id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"venue_code\": \"test-central-pier-{{$timestamp}}\",\n  \"venue_name\": \"Central Pier Terminal\",\n  \"venue_type\": \"ferry_terminal\",\n  \"location_address\": \"Central Pier, Hong Kong\",\n  \"supported_functions\": [\"ferry_boarding\"],\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/venue",
              "host": ["{{base_url}}"],
              "path": ["venue"]
            }
          }
        },
        {
          "name": "Create New Venue - Cheung Chau",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Multi-function venue created', function () {",
                  "    pm.response.to.have.status(201);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.venue_code).to.include('test-cheung-chau');",
                  "    pm.expect(response.supported_functions).to.include.members(['ferry_boarding', 'gift_redemption', 'playground_token']);",
                  "    pm.collectionVariables.set('cheung_chau_id', response.venue_id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"venue_code\": \"test-cheung-chau-{{$timestamp}}\",\n  \"venue_name\": \"Cheung Chau Multi-Function Center\",\n  \"venue_type\": \"ferry_terminal\",\n  \"location_address\": \"Cheung Chau Ferry Pier\",\n  \"supported_functions\": [\"ferry_boarding\", \"gift_redemption\", \"playground_token\"],\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/venue",
              "host": ["{{base_url}}"],
              "path": ["venue"]
            }
          }
        },
        {
          "name": "Get Venue by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Venue details retrieved', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.venue_id).to.exist;",
                  "    pm.expect(response.venue_code).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue/{{central_pier_id}}",
              "host": ["{{base_url}}"],
              "path": ["venue", "{{central_pier_id}}"]
            }
          }
        },
        {
          "name": "Update Venue",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Venue updated successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.location_address).to.include('Updated');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"location_address\": \"Central Pier, Hong Kong - Updated\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/venue/{{central_pier_id}}",
              "host": ["{{base_url}}"],
              "path": ["venue", "{{central_pier_id}}"]
            }
          }
        },
        {
          "name": "Get Venue List with Inactive",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Venue list with inactive filter', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.venues).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue?include_inactive=true",
              "host": ["{{base_url}}"],
              "path": ["venue"],
              "query": [
                {
                  "key": "include_inactive",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Venue Analytics",
      "item": [
        {
          "name": "Central Pier Analytics - 24 Hours",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Analytics data retrieved', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response).to.have.property('period');",
                  "    pm.expect(response).to.have.property('metrics');",
                  "    pm.expect(response.metrics.total_scans).to.be.a('number');",
                  "    pm.expect(response.metrics.success_rate).to.be.a('number');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue/VENUE-CENTRAL-PIER5/analytics?hours=24",
              "host": ["{{base_url}}"],
              "path": ["venue", "VENUE-CENTRAL-PIER5", "analytics"],
              "query": [
                {
                  "key": "hours",
                  "value": "24"
                }
              ]
            }
          }
        },
        {
          "name": "Cheung Chau Analytics - 1 Hour",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Multi-function venue analytics', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.metrics).to.exist;",
                  "    pm.expect(response.metrics.function_breakdown).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue/VENUE-CHEUNGCHAU-001/analytics?hours=1",
              "host": ["{{base_url}}"],
              "path": ["venue", "VENUE-CHEUNGCHAU-001", "analytics"],
              "query": [
                {
                  "key": "hours",
                  "value": "1"
                }
              ]
            }
          }
        },
        {
          "name": "Analytics - Invalid Hours",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Invalid hours rejected', function () {",
                  "    pm.response.to.have.status(400);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.error).to.eql('INVALID_HOURS');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue/VENUE-CENTRAL-PIER5/analytics?hours=999",
              "host": ["{{base_url}}"],
              "path": ["venue", "VENUE-CENTRAL-PIER5", "analytics"],
              "query": [
                {
                  "key": "hours",
                  "value": "999"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Venue Scan Operations",
      "item": [
        {
          "name": "Scan - Requires Authentication",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Scan requires operator JWT', function () {",
                  "    pm.response.to.have.status(401);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.message).to.include('token');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_token\": \"test-token\",\n  \"function_code\": \"ferry_boarding\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/venue/scan",
              "host": ["{{base_url}}"],
              "path": ["venue", "scan"]
            }
          }
        },
        {
          "name": "Scan - Missing Required Fields",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Missing fields rejected', function () {",
                  "    // Either 400 for missing fields or 401 for no auth (checked first)",
                  "    pm.expect([400, 401]).to.include(pm.response.code);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_token\": \"test-token\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/venue/scan",
              "host": ["{{base_url}}"],
              "path": ["venue", "scan"]
            }
          }
        }
      ]
    },
    {
      "name": "Performance Validation",
      "item": [
        {
          "name": "Response Time - Venue List",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Response time under 2 seconds', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});",
                  "",
                  "pm.test('Response is valid JSON', function () {",
                  "    pm.response.to.be.json;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue",
              "host": ["{{base_url}}"],
              "path": ["venue"]
            }
          }
        },
        {
          "name": "Response Time - Analytics",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Analytics response under 2 seconds', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(2000);",
                  "});",
                  "",
                  "pm.test('Analytics contains metrics', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.metrics).to.exist;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue/VENUE-CENTRAL-PIER5/analytics?hours=24",
              "host": ["{{base_url}}"],
              "path": ["venue", "VENUE-CENTRAL-PIER5", "analytics"],
              "query": [
                {
                  "key": "hours",
                  "value": "24"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Cleanup",
      "item": [
        {
          "name": "Delete Cheung Chau Venue",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Venue soft deleted', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue/{{cheung_chau_id}}",
              "host": ["{{base_url}}"],
              "path": ["venue", "{{cheung_chau_id}}"]
            }
          }
        },
        {
          "name": "Hard Delete Central Pier Venue",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Venue permanently deleted', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.message).to.include('permanently');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/venue/{{central_pier_id}}?hard_delete=true",
              "host": ["{{base_url}}"],
              "path": ["venue", "{{central_pier_id}}"],
              "query": [
                {
                  "key": "hard_delete",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
