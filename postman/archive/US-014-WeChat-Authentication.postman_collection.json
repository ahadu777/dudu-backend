{
  "info": {
    "name": "US-014: WeChat Mini-Program Authentication",
    "description": "Complete E2E test suite for WeChat authentication including login, phone binding, and error scenarios with unified API validation",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "wechat_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "test_code_prefix",
      "value": "e2e_test",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Flow 1: First-Time User Authentication",
      "item": [
        {
          "name": "1.1 WeChat Login (New User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "    pm.expect(jsonData).to.have.property('needs_phone');",
                  "});",
                  "",
                  "pm.test(\"User object is complete\", function () {",
                  "    var user = pm.response.json().user;",
                  "    pm.expect(user).to.have.property('id');",
                  "    pm.expect(user).to.have.property('name');",
                  "    pm.expect(user).to.have.property('wechat_openid');",
                  "    pm.expect(user).to.have.property('auth_type', 'wechat');",
                  "    pm.expect(user).to.have.property('created_at');",
                  "});",
                  "",
                  "pm.test(\"New user needs phone binding\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.needs_phone).to.be.true;",
                  "    pm.expect(jsonData.user.phone).to.be.null;",
                  "});",
                  "",
                  "pm.test(\"JWT token is valid format\", function () {",
                  "    var token = pm.response.json().token;",
                  "    pm.expect(token).to.match(/^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+$/);",
                  "});",
                  "",
                  "// Save token and user_id for subsequent requests",
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set('wechat_token', jsonData.token);",
                  "pm.collectionVariables.set('user_id', jsonData.user.id);",
                  "",
                  "console.log(\"✅ User ID:\", jsonData.user.id);",
                  "console.log(\"   Token:\", jsonData.token.substring(0, 50) + '...');",
                  "console.log(\"   Needs Phone:\", jsonData.needs_phone);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"{{test_code_prefix}}_{{$timestamp}}_{{$randomInt}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/wechat/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "wechat", "login"]
            },
            "description": "First-time WeChat login creates new user with default name and null phone"
          },
          "response": []
        },
        {
          "name": "1.2 Bind Phone Number",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has phone and user\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('phone');",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "});",
                  "",
                  "pm.test(\"Phone is in E.164 format\", function () {",
                  "    var phone = pm.response.json().phone;",
                  "    pm.expect(phone).to.match(/^\\+\\d{10,15}$/);",
                  "});",
                  "",
                  "pm.test(\"User phone is updated\", function () {",
                  "    var user = pm.response.json().user;",
                  "    var phone = pm.response.json().phone;",
                  "    pm.expect(user.phone).to.equal(phone);",
                  "    pm.expect(user.id).to.equal(pm.collectionVariables.get('user_id'));",
                  "});",
                  "",
                  "console.log(\"✅ Phone bound:\", pm.response.json().phone);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{wechat_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"phone_{{$timestamp}}_{{$randomInt}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/wechat/phone",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "wechat", "phone"]
            },
            "description": "Bind phone number to WeChat user account"
          },
          "response": []
        }
      ],
      "description": "Complete first-time user flow: login → phone binding"
    },
    {
      "name": "Flow 2: Returning User",
      "item": [
        {
          "name": "2.1 Login with Same Code (Deterministic)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Returns same user (deterministic openid)\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    // In Mock mode, same code generates same openid → same user",
                  "    pm.expect(jsonData.user).to.have.property('wechat_openid');",
                  "    pm.expect(jsonData.user.auth_type).to.equal('wechat');",
                  "});",
                  "",
                  "pm.test(\"Token is refreshed (new JWT)\", function () {",
                  "    var newToken = pm.response.json().token;",
                  "    pm.expect(newToken).to.be.a('string');",
                  "    pm.expect(newToken).to.match(/^[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+\\.[A-Za-z0-9-_]+$/);",
                  "});",
                  "",
                  "console.log(\"✅ Returning user login successful\");"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"returning_user_test_code\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/wechat/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "wechat", "login"]
            },
            "description": "Mock mode: same code produces same openid and finds existing user"
          },
          "response": []
        }
      ],
      "description": "Returning user recognition and token refresh"
    },
