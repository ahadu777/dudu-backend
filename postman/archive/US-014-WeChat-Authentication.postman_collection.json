                  "    url: pm.collectionVariables.get('base_url') + '/api/v1/auth/wechat/login',",
                  "    method: 'POST',",
                  "    header: {'Content-Type': 'application/json'},",
                  "    body: {",
                  "        mode: 'raw',",
                  "        raw: JSON.stringify({ code: 'validation_test_' + Date.now() })",
                  "    }",
                  "}, function (err, response) {",
                  "    if (!err && response.code === 200) {",
                  "        var token = response.json().token;",
                  "        ",
                  "        // Now test phone binding with missing code",
                  "        pm.test(\"Status code is 400\", function () {",
                  "            pm.response.to.have.status(400);",
                  "        });",
                  "        ",
                  "        pm.test(\"Validation error for missing code\", function () {",
                  "            var jsonData = pm.response.json();",
                  "            pm.expect(jsonData.code).to.equal('VALIDATION_ERROR');",
                  "            pm.expect(jsonData.errors).to.include('code is required');",
                  "        });",
