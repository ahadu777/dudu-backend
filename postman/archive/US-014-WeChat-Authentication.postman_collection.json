    {
      "name": "Flow 4: API Contract Validation",
      "item": [
        {
          "name": "4.1 Mock Mode - Login Response Schema",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Response schema matches contract\", function () {",
                  "    var schema = {",
                  "        type: 'object',",
                  "        required: ['token', 'user', 'needs_phone'],",
                  "        properties: {",
                  "            token: { type: 'string' },",
                  "            user: {",
                  "                type: 'object',",
                  "                required: ['id', 'name', 'wechat_openid', 'auth_type', 'created_at'],",
                  "                properties: {",
                  "                    id: { type: 'number' },",
                  "                    name: { type: 'string' },",
                  "                    wechat_openid: { type: 'string' },",
                  "                    phone: { type: ['string', 'null'] },",
                  "                    auth_type: { type: 'string', enum: ['wechat'] },",
                  "                    created_at: { type: 'string' }",
                  "                }",
                  "            },",
                  "            needs_phone: { type: 'boolean' }",
                  "        }",
                  "    };",
                  "    ",
                  "    pm.response.to.have.jsonSchema(schema);",
                  "});",
                  "",
                  "pm.test(\"Mock openid has correct prefix\", function () {",
                  "    var openid = pm.response.json().user.wechat_openid;",
                  "    pm.expect(openid).to.match(/^oMock/);",
                  "});",
                  "",
                  "console.log(\"✅ API contract validated\");"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"contract_validation_{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/wechat/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "wechat", "login"]
            },
            "description": "Validate response schema matches OpenAPI specification"
          },
          "response": []
        },
