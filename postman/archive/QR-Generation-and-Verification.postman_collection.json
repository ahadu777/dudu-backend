                "exec": [
                  "// Extract encrypted data from qr_image data URL if needed",
                  "const qrImage = pm.collectionVariables.get('encrypted_qr_data');",
                  "if (qrImage && qrImage.startsWith('data:image/png;base64,')) {",
                  "    // For this test, we'll use the full data URL",
                  "    // In production, you'd scan the QR and get the encrypted string",
                  "    console.log('Using QR image data URL');",
                  "} else if (qrImage) {",
                  "    console.log('Using encrypted QR data string');",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    console.log('Redemption Result:', response.result);",
                  "    console.log('Ticket Status:', response.ticket_status);",
                  "    console.log('Remaining Uses:', response.remaining_uses);",
