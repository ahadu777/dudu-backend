              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    console.log('Ticket Info Retrieved Successfully');",
                  "    console.log('Ticket Code:', response.ticket_code);",
                  "    console.log('Ticket Type:', response.ticket_type);",
                  "    console.log('Status:', response.status);",
                  "    console.log('Entitlements:', JSON.stringify(response.entitlements, null, 2));",
                  "    ",
                  "    pm.test('Response has entitlements', () => {",
                  "        pm.expect(response.entitlements).to.be.an('array');",
                  "        pm.expect(response.entitlements.length).to.be.greaterThan(0);",
                  "    });",
                  "    ",
                  "    pm.test('Entitlements have correct structure', () => {",
                  "        response.entitlements.forEach(ent => {",
                  "            pm.expect(ent).to.have.property('function_code');",
                  "            pm.expect(ent).to.have.property('remaining_uses');",
                  "        });",
                  "    });",
                  "    ",
                  "    pm.test('Ticket type is OTA', () => {",
                  "        pm.expect(response.ticket_type).to.equal('OTA');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
