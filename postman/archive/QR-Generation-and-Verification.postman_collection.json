    {
      "name": "QR Decryption",
      "item": [
        {
          "name": "Decrypt Valid QR Code",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Note: You need to run 'Generate QR' request first to populate encrypted_qr_data",
                  "const encryptedData = pm.collectionVariables.get('encrypted_qr_data');",
                  "if (!encryptedData) {",
                  "    console.warn('No encrypted QR data found. Please run Generate QR request first.');",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    console.log('Decryption successful');",
                  "    console.log('JTI:', response.jti);",
                  "    console.log('Ticket Code:', response.ticket_code);",
                  "    console.log('Is Expired:', response.is_expired);",
                  "    console.log('Remaining Seconds:', response.remaining_seconds);",
                  "}"
                ],
                "type": "text/javascript"
              }
