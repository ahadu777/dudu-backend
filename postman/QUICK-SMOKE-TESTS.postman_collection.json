{
  "info": {
    "name": "Quick Smoke Tests - Core Endpoints",
    "description": "Quick validation of core API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/healthz",
          "host": ["{{base_url}}"],
          "path": ["healthz"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Server is healthy', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response indicates healthy status', function() {",
              "    var data = pm.response.json();",
              "    pm.expect(data.status).to.equal('ok');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "2. API Documentation",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/docs/",
          "host": ["{{base_url}}"],
          "path": ["docs", ""]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Swagger UI is accessible', function() {",
              "    pm.response.to.have.status(200);",
              "    pm.expect(pm.response.text()).to.include('swagger');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "3. WeChat Login Endpoint Available",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"code\": \"test_smoke_code\"}"
        },
        "url": {
          "raw": "{{base_url}}/auth/wechat/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "wechat", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('WeChat login endpoint responds', function() {",
              "    // 200 = Mock mode, 401 = Production mode (expected without valid code)",
              "    pm.expect(pm.response.code).to.be.oneOf([200, 401]);",
              "});",
              "",
              "pm.test('Returns JSON response', function() {",
              "    pm.response.to.be.json;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "4. Products API Available",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/miniprogram/products",
          "host": ["{{base_url}}"],
          "path": ["miniprogram", "products"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Products endpoint accessible', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Returns products array', function() {",
              "    var data = pm.response.json();",
              "    pm.expect(data.products).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
