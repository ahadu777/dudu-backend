    {
      "name": "Multi-Function Validation",
      "item": [
        {
          "name": "Test 1: Unlimited Ferry Boarding (5 scans)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Set QR token - replace with actual token from ticket service",
                  "pm.collectionVariables.set('qrToken', pm.collectionVariables.get('qrToken') || 'REPLACE_WITH_ACTUAL_QR_TOKEN');"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json();",
                  "pm.test('Result is success', function () { pm.expect(body.result).to.eql('success'); });",
                  "pm.test('Remaining uses unchanged (unlimited)', function () {",
                  "  if (body.remaining_uses !== undefined) {",
                  "    pm.expect(body.remaining_uses).to.be.at.least(999);",
                  "  }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/venue/scan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "venue", "scan"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_token\": \"{{qrToken}}\",\n  \"function_code\": \"ferry_boarding\",\n  \"session_code\": \"{{sessionCodeCentral}}\",\n  \"terminal_device_id\": \"TERMINAL-CP-001\"\n}"
            }
          }
        },
        {
          "name": "Test 2: Single-Use Gift Redemption (First)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json();",
                  "pm.test('Result is success', function () { pm.expect(body.result).to.eql('success'); });",
                  "pm.collectionVariables.set('firstGiftScanSuccess', true);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/venue/scan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "venue", "scan"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_token\": \"{{qrToken}}\",\n  \"function_code\": \"gift_redemption\",\n  \"session_code\": \"{{sessionCodeGift}}\",\n  \"terminal_device_id\": \"TERMINAL-GIFT-001\"\n}"
            }
          }
        },
        {
          "name": "Test 3: Single-Use Gift Redemption (Second - Should Fail)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 422', function () { pm.response.to.have.status(422); });",
                  "const body = pm.response.json();",
                  "pm.test('Result is reject', function () { pm.expect(body.result).to.eql('reject'); });",
                  "pm.test('Reason is ALREADY_REDEEMED', function () { pm.expect(body.reason).to.eql('ALREADY_REDEEMED'); });"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/venue/scan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "venue", "scan"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_token\": \"{{qrToken}}\",\n  \"function_code\": \"gift_redemption\",\n  \"session_code\": \"{{sessionCodeGift}}\",\n  \"terminal_device_id\": \"TERMINAL-GIFT-001\"\n}"
            }
          }
        },
        {
          "name": "Test 4: Counted Playground Tokens (10 scans)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
                  "const body = pm.response.json();",
                  "pm.test('Result is success', function () { pm.expect(body.result).to.eql('success'); });",
                  "pm.test('Remaining uses decrements', function () {",
                  "  if (body.remaining_uses !== undefined) {",
                  "    const currentUses = body.remaining_uses;",
                  "    pm.expect(currentUses).to.be.below(10);",
                  "  }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/venue/scan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "venue", "scan"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_token\": \"{{qrToken}}\",\n  \"function_code\": \"playground_token\",\n  \"session_code\": \"{{sessionCodeCC}}\",\n  \"terminal_device_id\": \"TERMINAL-CC-001\"\n}"
            }
          }
        }
      ]
