              "mode": "raw",
              "raw": "{\n  \"qr_token\": \"{{qrToken}}\",\n  \"function_code\": \"ferry_boarding\",\n  \"session_code\": \"{{sessionCodeCC}}\",\n  \"terminal_device_id\": \"TERMINAL-CC-002\"\n}"
            },
