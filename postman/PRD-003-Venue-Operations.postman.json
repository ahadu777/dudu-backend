                  "pm.test('Status is 201', function () { pm.response.to.have.status(201); });",
                  "const body = pm.response.json();",
                  "pm.test('Session code exists', function () { pm.expect(body.session_code).to.exist; });",
                  "pm.test('Venue code is central-pier', function () { pm.expect(body.venue_code).to.eql('central-pier'); });",
