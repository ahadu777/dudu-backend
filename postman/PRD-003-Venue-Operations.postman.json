    {
      "name": "Fraud Prevention",
      "item": [
        {
          "name": "Cross-Terminal JTI Duplicate Detection",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 422', function () { pm.response.to.have.status(422); });",
                  "const body = pm.response.json();",
                  "pm.test('Result is reject', function () { pm.expect(body.result).to.eql('reject'); });",
                  "pm.test('Reason is ALREADY_REDEEMED', function () {",
                  "  pm.expect(body.reason).to.be.oneOf(['ALREADY_REDEEMED', 'DUPLICATE_JTI']);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
