    {
      "name": "4. Complete E2E Flow",
      "item": [
        {
          "name": "4.1 E2E: Login -> Bind Phone -> Verify",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Generate unique code for this test run",
                  "pm.variables.set('e2eCode', 'e2e_test_' + Date.now());"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Complete login response', function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('token');",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "    pm.expect(jsonData).to.have.property('needs_phone');",
                  "    ",
                  "    // Store for next request",
                  "    pm.collectionVariables.set('e2eToken', jsonData.token);",
                  "    pm.collectionVariables.set('e2eUserId', jsonData.user.id);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"{{e2eCode}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/wechat/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "wechat", "login"]
            },
            "description": "Step 1: Login with WeChat code"
          },
          "response": []
        },
        {
          "name": "4.2 E2E: Bind Phone After Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function() {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Phone bound successfully', function() {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('phone');",
                  "    pm.expect(jsonData.phone).to.match(/^\\+\\d{10,15}$/);",
                  "    pm.expect(jsonData.user.phone).to.equal(jsonData.phone);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
