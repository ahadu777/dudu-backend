            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"phone_e2e_{{$timestamp}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/wechat/phone",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "wechat", "phone"]
            },
            "description": "Step 2: Bind phone number after login"
          },
          "response": []
        }
