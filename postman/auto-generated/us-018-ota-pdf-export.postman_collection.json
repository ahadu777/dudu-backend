{
  "info": {
    "_postman_id": "us-018-ota-pdf-export",
    "name": "US-018: OTA Ticket PDF Export",
    "description": "Tests for US-018 - OTA Ticket PDF Export. Tests single ticket PDF and batch PDF export functionality.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "api_key",
      "value": "ota_full_access_key_99999"
    },
    {
      "key": "batch_id",
      "value": ""
    },
    {
      "key": "ticket_code",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Setup: Generate Test Tickets",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has batch_id and tickets', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('batch_id');",
              "    pm.expect(jsonData).to.have.property('tickets');",
              "    pm.expect(jsonData.tickets).to.be.an('array');",
              "    pm.expect(jsonData.tickets.length).to.be.greaterThan(0);",
              "",
              "    // Save batch_id and ticket_code for subsequent tests",
              "    pm.collectionVariables.set('batch_id', jsonData.batch_id);",
              "    pm.collectionVariables.set('ticket_code', jsonData.tickets[0].ticket_code);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 106,\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/ota/tickets/bulk-generate",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "tickets", "bulk-generate"]
        }
      }
    },
    {
      "name": "1.1 Single Ticket PDF - Success",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Content-Type is application/pdf', function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/pdf');",
              "});",
              "",
              "pm.test('Content-Disposition header exists', function () {",
              "    const contentDisposition = pm.response.headers.get('Content-Disposition');",
              "    pm.expect(contentDisposition).to.exist;",
              "    pm.expect(contentDisposition).to.include('attachment');",
              "    pm.expect(contentDisposition).to.include('.pdf');",
              "});",
              "",
              "pm.test('Response body is not empty', function () {",
              "    pm.expect(pm.response.text().length).to.be.greaterThan(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/ota/tickets/{{ticket_code}}/pdf",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "tickets", "{{ticket_code}}", "pdf"]
        }
      }
    },
    {
      "name": "1.2 Single Ticket PDF - Not Found (404)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 404', function () {",
              "    pm.response.to.have.status(404);",
              "});",
              "",
              "pm.test('Response has error code TICKET_NOT_FOUND', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('code');",
              "    pm.expect(jsonData.code).to.equal('TICKET_NOT_FOUND');",
              "    pm.expect(jsonData).to.have.property('message');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/ota/tickets/NONEXISTENT-TICKET/pdf",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "tickets", "NONEXISTENT-TICKET", "pdf"]
        }
      }
    },
    {
      "name": "1.3 Single Ticket PDF - No API Key (401)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 401', function () {",
              "    pm.response.to.have.status(401);",
              "});",
              "",
              "pm.test('Response has error', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('error');",
              "    pm.expect(jsonData.error).to.equal('API_KEY_REQUIRED');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/ota/tickets/{{ticket_code}}/pdf",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "tickets", "{{ticket_code}}", "pdf"]
        }
      }
    },
    {
      "name": "2.1 Batch PDF - Success",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Content-Type is application/pdf', function () {",
              "    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/pdf');",
              "});",
              "",
              "pm.test('Content-Disposition header exists', function () {",
              "    const contentDisposition = pm.response.headers.get('Content-Disposition');",
              "    pm.expect(contentDisposition).to.exist;",
              "    pm.expect(contentDisposition).to.include('attachment');",
              "    pm.expect(contentDisposition).to.include('.pdf');",
              "});",
              "",
              "pm.test('Response body is not empty (batch PDF)', function () {",
              "    pm.expect(pm.response.text().length).to.be.greaterThan(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/ota/batches/{{batch_id}}/pdf",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "batches", "{{batch_id}}", "pdf"]
        }
      }
    },
    {
      "name": "2.2 Batch PDF - Not Found (404)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 404', function () {",
              "    pm.response.to.have.status(404);",
              "});",
              "",
              "pm.test('Response has error code BATCH_NOT_FOUND', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('code');",
              "    pm.expect(jsonData.code).to.equal('BATCH_NOT_FOUND');",
              "    pm.expect(jsonData).to.have.property('message');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/ota/batches/NONEXISTENT-BATCH/pdf",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "batches", "NONEXISTENT-BATCH", "pdf"]
        }
      }
    },
    {
      "name": "2.3 Batch PDF - No API Key (401)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 401', function () {",
              "    pm.response.to.have.status(401);",
              "});",
              "",
              "pm.test('Response has error', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('error');",
              "    pm.expect(jsonData.error).to.equal('API_KEY_REQUIRED');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/ota/batches/{{batch_id}}/pdf",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "batches", "{{batch_id}}", "pdf"]
        }
      }
    }
  ]
}
