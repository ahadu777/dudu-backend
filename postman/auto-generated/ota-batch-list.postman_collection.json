    {
      "name": "Test 12: has_more flag is correct",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{api_key}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/ota/batches?limit=1",
          "host": ["{{base_url}}"],
          "path": ["api", "ota", "batches"],
          "query": [
            {
              "key": "limit",
              "value": "1"
            }
