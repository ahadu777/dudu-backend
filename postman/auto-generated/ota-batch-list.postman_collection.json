          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Should return 200 OK', () => {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('has_more is true when total > page * limit', () => {",
              "  const response = pm.response.json();",
              "  if (response.total > 1) {",
              "    pm.expect(response.has_more).to.be.true;",
              "  } else {",
              "    pm.expect(response.has_more).to.be.false;",
              "  }",
              "});"
            ],
