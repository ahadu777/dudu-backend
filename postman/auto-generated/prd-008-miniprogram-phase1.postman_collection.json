                  "    const order = pm.response.json();",
                  "    const ctx = order.pricing_context;",
                  "    pm.expect(order.total).to.equal(ctx.subtotal + ctx.addons_total);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
